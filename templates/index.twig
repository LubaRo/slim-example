{% extends 'base.twig' %}

{% block content %}
    <h1>Slim says you HELLO and WELCOME!</h1>
    <p>This is the twig content ^-^</p>

    <div class="main-content">
        <form action="/" method="get">
            <input type="search" name="search" value="{{ search }}" placeholder="Find your company" />
            <input type="submit" value="Search" />
        </form>

        {% if foundData %}
            <div class="bordered">
                <p>Hooray! You found something ^-^</p>
                {% for company in foundData %}
                    <p><a href="{{ url_for('company', { 'id': company.id }) }}">{{ company.name }}</a></p>
                {% endfor %}
            </div>
        {% elseif search %}
            <p>Sorry, we cannot find something suitable..</p>
        {% endif %}
    </div>

    <div class="links-list">
        <p>Also you can follow by these links:</p>
        <ul>
            <li><a href="{{ url_for('users') }}">Users</a></li>
            <li><a href="{{ url_for('companies') }}">Our best companies</a></li>
        </ul>
    </div>

{% endblock %}

{% block footer %}
<div class="footer">
    <i>Powered by Slim micro framework</i>
</div>
{% endblock %}