{% extends 'base.twig' %}

{% block content %}
    <h1 class="mt-5">User profile</h1>

    <div class="mt-4">
        {% for key,value in user %}
            <p><b>{{ key }}:</b> {{ value }}</p>
        {% endfor %}
        <a href="{{ url_for('edit_user', { 'id': user.id }) }}">Update user info</a>
        <br><br>
        <a href="{{ url_for('users') }}">Back to list</a>
    </div
{% endblock %}
