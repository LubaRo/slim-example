<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ title }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ base_path() }}/styles/bootstrap.min.css"/>
            <link rel="stylesheet" type="text/css" href="{{ base_path() }}/styles/base.css"/>
        {% endblock %}
        <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    </head>
    <body>
        {% block header %}
            <header class="masthead mb-auto">
                <div class="inner">
                    <h3 class="masthead-brand"><a href="/">Home</a></h3>
                </div>
            </header>
        {% endblock %}

        {% block notifications %}
            {% if messages %}
            <div class="notifications-bar">
                {% if messages.error %}
                    <div class="message-error">
                        {% for message in messages.error %}
                            <p>{{ message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
                {% if messages.success %}
                    <div class="message-success">
                        {% for message in messages.success %}
                            <p>{{ message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            {% endif %}
        {% endblock %}
        {% block body %}
            <div id="content">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}

        {% block footer %}
        <footer class="mastfoot mt-auto">
            <div class="inner">
                <p>&#169;Sandbox development</p>
            </div>
        </footer>
        {% endblock %}
    </body>
</html>
