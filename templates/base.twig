<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ title }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ base_path() }}/styles/base.css"/>
        {% endblock %}
    </head>
    <body>
        {% block notifications %}
            {% if messages %}
            <div class="notifications-bar">
                {% if messages.error %}
                    <div class="message-error">
                        {% for message in messages.error %}
                            <p>{{ message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
                {% if messages.success %}
                    <div class="message-success">
                        {% for message in messages.success %}
                            <p>{{ message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            {% endif %}
        {% endblock %}
        {% block body %}
            <div id="content">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}

        {% block footer %}
            <div class="footer">
                <a href="/">Go back home</a>
            </div>
        {% endblock %}
    </body>
</html>
